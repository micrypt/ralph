             `(%bind (counter 5)
                (%bind (result 1)
                  (%begin
                   (%while (> counter 0)
                     (%bind (%_1 (* factorial counter))
                       (%bind (%_2 (%set factorial %_1))
                         (%begin
                          %_2
                          (%bind (%_3 (- counter 1))
                            (%bind (%_4 (%set counter %_3))
                              %_4))))))
                   counter)))
             (normalize-term
              (macroexpand-all
               `(bind ((counter 5)
                       (result 1))
                  (while (> counter 0)
                    (set! factorial (* factorial counter))
                    (set! counter (- counter 1)))
                  counter)
               *environment*)))

