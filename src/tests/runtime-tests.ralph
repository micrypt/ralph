;; replace-subsequence!
(bind ((generate-array (method ()
                         [0 1 2 3 4 5]))
       (xs ["X" "X" "X"]))
  (bind ((x (generate-array)))
    (replace-subsequence! x xs start: 2)
    (check-equal "replace-subsequence!"
