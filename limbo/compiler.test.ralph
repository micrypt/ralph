(reset-symbol-counter!)
(bind ((module (make-core-environment)))
  (check-equal "define free variables: use of prior definition"
               `(%begin
                 (%begin
                  (%define foo)
                  (%begin
                   (%define bar)
                   (%begin
                    (%bind (bar 42)
                      (%begin
                       #f
                       (%set foo (%infix "+" 23 bar))))
                    (%begin
                     #f
                     (%set bar foo))
                    bar
                    foo))))
               (define-free-variables
                 (lift-defines
                  (macroexpand-all
                   '(begin
                     (bind ((bar 42))
                       (define foo (%infix "+" 23 bar)))
                     (define bar foo)
                     bar
                     foo)
                   module)
                  module)
                 module)))

