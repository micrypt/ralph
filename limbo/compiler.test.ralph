


(reset-symbol-counter!)
(check-equal "statements: or"
             `(%bind ($1 #f)
                (%bind ($3 #f)
                  (%begin
                   (%if ((%native "$T") $1)
                        (%set $3 $1)
                        (%bind ($2 2)
                          (%if ((%native "$T") $2)
                               (%set $3 $2)
                               (%set $3 3))))
                   (foo $3 bar))))
              (transform-statements!
               (normalize-term
                (macroexpand-all
                 `(foo (or #f 2 3) bar)
                 *environment*)
                *environment*)
               *environment*))

